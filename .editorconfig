# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{md,txt,git*,editorconfig}]
end_of_line = lf

[*.{md,txt,patch}]
max_line_length = off
trim_trailing_whitespace = false

[{.git,.idea}/**]
end_of_line = off
insert_final_newline = off
